{
    "name": "chemaclass/edifact-parser",
    "description": "An EDIFACT file parser to extract the values from any defined segment",
    "type": "library",
    "keywords": [
        "edi",
        "edifact",
        "edifile",
        "un-edifact",
        "parser",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Maria Valera Reales",
            "email": "chemaclass@outlook.es"
        }
    ],
    "prefer-stable": true,
    "require": {
        "ext-json": "*",
        "php": ">=8.0",
        "sabas/edifact": "^0.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.12",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "symfony/var-dumper": "^5.4",
        "vimeo/psalm": "^4.29"
    },
    "autoload": {
        "psr-4": {
            "EdifactParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EdifactParser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-all": [
            "@quality",
            "@phpunit"
        ],
        "quality": [
            "@csrun",
            "@psalm",
            "@phpstan"
        ],
        "phpunit": [
            "@test-unit",
            "@test-functional"
        ],
        "test-unit": "./vendor/bin/phpunit --testsuite=unit",
        "test-functional": "./vendor/bin/phpunit --testsuite=functional",
        "psalm": "./vendor/bin/psalm",
        "phpstan": "./vendor/bin/phpstan analyze",
        "csfix": "./vendor/bin/php-cs-fixer fix",
        "csrun": "./vendor/bin/php-cs-fixer fix --dry-run"
    },
    "config": {
        "platform": {
            "php": "8.0"
        }
    }
}
